<!DOCTYPE html>
<html>
  <head>
    <title>Play Game <%= game_id %> - GuessAlpha</title>
    <style>
    </style>
  </head>
  <body>
    <h1>GAME <%= game_id %></h1>
    <h3><%= nickname %></h3>
    <div id="content">
      <p>Please wait until the host starts the game</p>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();
      var round = 0;
      socket.on('round', function(that_game_id) {
          if (that_game_id == <%= game_id %>){
            round ++;
            document.getElementById("content").innerHTML = `<p>Round ${round}!</p>`
            document.getElementById("content").innerHTML +=  `
            <p>Pick a number between 1 to 100.</p>
            <input type="number" id="number">
            <button type="submit" onclick="submitNumber()">Submit</button>
            `
          }
      })
      function submitNumber(){
        let number = document.getElementById("number").value;
        if (number > 100 || number < 0){
          document.getElementById("number").value = "";
        } else {
          // submit number
        }
      }
  </script>
  </body>
</html>